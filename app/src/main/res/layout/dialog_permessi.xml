<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#00a5ff">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Accetta i permessi per votare"
            android:textColor="@color/whiteCardColor"
            android:textSize="9pt"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/information"/>
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/testo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Attenzione! Ti verrà richiesto di accettare i permessi. Per poter votare è necessario accettarli successivamente seleziona di nuovo il tipo di votazione desiderata"
        android:textSize="18sp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        style="@style/headerTextPrimary"/>


    <Button
        android:id="@+id/rispostaPositiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Ok"
        style="@style/button"
        android:layout_below="@+id/testo1"
        android:layout_centerHorizontal="true" />




</RelativeLayout>